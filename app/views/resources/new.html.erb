<h2>Add Resource</h2>
<%= form_for(:resource, :url => {:controller => 'resources', :action => 'create'},
             html: { multipart: true }) do |f| %>

    <% if @resource.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= "#{pluralize(@resource.errors.count, "error")} prohibited this photo from being saved:" %>
        </h2>
        <ul>
          <% @resource.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <%= f.label :file %>
  <%= file_field(:resource, :file) %>
  <%= f.submit 'Upload Resource'%>
<% end %>